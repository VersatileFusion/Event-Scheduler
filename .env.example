# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/event-scheduler

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_LIFETIME=30d

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
EMAIL_FROM=no-reply@eventscheduler.com

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Redis Caching
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info # debug, info, warn, error

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# File Uploads
MAX_FILE_SIZE=50 # Max file size in MB
UPLOAD_PATH=uploads # Path to upload directory

# Background Jobs
EXPIRED_EVENTS_RETENTION_DAYS=90 # Days to keep expired events before archiving 